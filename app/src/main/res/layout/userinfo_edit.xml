<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="用户昵称"
                style="@style/txt_gray_12" />
            <EditText
                android:id="@+id/nickName"
                android:gravity="center_vertical|right"
                android:background="@null"
                style="@style/txt_black_12"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />

        <RelativeLayout
            android:id="@+id/headImgLayout"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_centerVertical="true"
                android:text="用户头像"
                style="@style/txt_gray_12" />
            <ImageView
                android:src="@color/whitesmoke"
                android:id="@+id/userIcon"
                android:layout_toLeftOf="@+id/arrowRight"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <View
                android:id="@+id/arrowRight"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_black_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </RelativeLayout>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="手机号"
                style="@style/txt_gray_12" />
            <TextView
                android:id="@+id/userPhone"
                android:gravity="center_vertical|right"
                android:background="@null"
                style="@style/txt_black_12"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:text="真实姓名"
                style="@style/txt_gray_12" />
            <TextView
                android:id="@+id/userName"
                android:gravity="center_vertical|right"
                android:background="@null"
                style="@style/txt_black_12"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp" />
        </LinearLayout>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <RelativeLayout
            android:paddingRight="25dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/line1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="性别"
                android:textSize="12sp" />

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/LayoutFemale"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_toLeftOf="@+id/LayoutMale">

                <ImageView
                    android:id="@+id/SexFemale"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@mipmap/icon_round" />

                <TextView
                    android:id="@+id/TextFemale"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="女"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:id="@+id/LayoutMale"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/SexMale"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:gravity="center_vertical"
                    android:src="@mipmap/icon_round" />

                <TextView
                    android:id="@+id/TextMale"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="男"
                    android:textSize="12sp" />
            </LinearLayout>


        </RelativeLayout>

        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <RelativeLayout
            android:id="@+id/birthdayLayout"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_centerVertical="true"
                android:text="生日"
                style="@style/txt_gray_12" />
            <TextView
                android:id="@+id/userBirthday"
                android:layout_toLeftOf="@+id/arrowRight4"
                android:layout_centerVertical="true"
                android:text=""
                style="@style/txt_black_12" />
            <View
                android:id="@+id/arrowRight4"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_black_arrow_right"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </RelativeLayout>

        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <TextView
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="个人简介"
            style="@style/txt_gray_12" />
        <EditText
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:id="@+id/introduce"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="8dp"
            android:background="@drawable/shape_nocorner_black"
            style="@style/txt_black_12"
            android:gravity="left|top"
            android:layout_width="match_parent"
            android:minHeight="80dp" />

    </LinearLayout>
</ScrollView>