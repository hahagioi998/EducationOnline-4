<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/textholder"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">
    <RelativeLayout
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_toLeftOf="@+id/statusTxt"
            android:id="@+id/textdirectory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="PHOTOSHOP基础工具机+唯美图片合成"
            android:lineSpacingMultiplier="1.5"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/statusTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/normal_blue"
            android:text=""
            android:layout_alignParentRight="true"
            android:lineSpacingMultiplier="1.5"
            android:textSize="14sp"/>
        <TextView
            android:text="xxx"
            android:layout_below="@+id/textdirectory"
            android:id="@+id/fileName"
            android:layout_marginTop="2dp"
            style="@style/txt_gray_12"/>
    </RelativeLayout>
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/CourseImageLayout"
        android:background="@color/light_gray" />

</LinearLayout>
