<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:padding="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/courseImg"
                android:layout_width="90dp"
                android:layout_height="90dp" />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/courseType"
                        android:text="视频课"
                        android:textColor="@color/dark_orange"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_centerVertical="true"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:background="@drawable/shape_orangedline_with_corner"
                        style="@style/txt_gray_14" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:id="@+id/coursePrice"
                        android:text="100.00学币"
                        android:textColor="@color/dark_orange"
                        style="@style/txt_gray_14" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/teacherName"
                    android:layout_marginTop="6dp"
                    android:text="ADOBE XXX"
                    style="@style/txt_gray_14" />
                <TextView
                    android:id="@+id/courseName"
                    android:layout_marginTop="6dp"
                    android:text="PHOTOSHOP 基础课程"
                    style="@style/txt_gray_14" />

            </LinearLayout>
        </LinearLayout>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <View
            android:background="@color/whitesmoke"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:id="@+id/hintTxt"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="课程总价"
                style="@style/txt_gray_14" />
            <TextView
                android:id="@+id/courseTotalPrice"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:text="100.00"
                android:layout_alignParentRight="true"
                style="@style/txt_black_14" />
        </RelativeLayout>
        <View
            android:background="@color/highwhite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/orderPrice"
            android:text="总价：120.00元"
            android:layout_marginLeft="15dp"
            android:textColor="@color/normal_red"
            android:layout_centerVertical="true"
            style="@style/txt_gray_14" />
        <TextView
            android:id="@+id/submitBtn"
            android:textSize="15sp"
            android:text="提交订单"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/normal_red"
            android:layout_alignParentRight="true"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>