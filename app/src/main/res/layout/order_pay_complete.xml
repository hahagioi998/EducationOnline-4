<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="140dp">
        <ImageView
            android:src="@mipmap/result_icon"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/hintTxt"
            android:text="订单支付成功"
            style="@style/txt_black_14" />
    </LinearLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/orderId"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="订单号"
        style="@style/txt_black_14" />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/orderAmount"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="订单金额"
        style="@style/txt_black_14" />
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/toOrder"
            android:gravity="center"
            android:text="查看订单"
            android:textColor="@color/normal_red"
            android:background="@drawable/shape_smallcorner_redline"
            android:layout_width="130dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/toHome"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="进入首页"
            android:textColor="@color/normal_gray"
            android:background="@drawable/shape_blackline_with_smallcorner"
            android:layout_width="130dp"
            android:layout_height="40dp" />
        </LinearLayout>
</LinearLayout>
