<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_recent_avatar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/chat_default_user_avatar" />

        <TextView
            android:id="@+id/recent_unread"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_above="@+id/iv_recent_avatar"
            android:layout_marginBottom="-12dp"
            android:layout_marginLeft="-10dp"
            android:layout_toRightOf="@+id/iv_recent_avatar"
            android:background="@mipmap/common_msg_tips"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="10.0dip" />

        <TextView
            android:id="@+id/recent_time_text"
            style="@style/txt_black_14"
            android:layout_marginTop="3dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="58.0dip"
            android:layout_toRightOf="@id/iv_recent_avatar"
            android:ellipsize="end"
            android:gravity="left|center"
            android:singleLine="true" />

        <TextView
            android:id="@+id/recent_msg_text"
            android:layout_below="@id/recent_time_text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="35.0dip"
            android:layout_toRightOf="@id/iv_recent_avatar"
            android:layout_marginTop="5dip"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingRight="6.0dip"
            android:singleLine="true"
            style="@style/txt_gray_12" />

        <TextView
            android:id="@+id/recent_teim_text"
            android:layout_width="wrap_content"
            android:layout_height="25.0dip"
            android:layout_above="@id/recent_msg_text"
            android:layout_alignParentRight="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginRight="10dip"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="0.0dip"
            android:singleLine="true"
            style="@style/txt_black_14"
            android:textSize="10.0sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gray"
        />

</RelativeLayout>