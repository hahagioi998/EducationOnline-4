<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/imagelayout"
        android:layout_width="wrap_content"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/background_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@mipmap/teacher_bg" />


        <ImageView
            android:id="@+id/teacherpotrait"
            android:transitionName="headIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:src="@mipmap/icon_head" />

        <TextView
            android:id="@+id/teacherSexual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teacherpotrait"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_red_with_corner"
            android:paddingBottom="1dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="1dp"
            android:text="女"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/teacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teacherSexual"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Adobe 王晨曦"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/teacherTitles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teacherName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="资深平面设计师、艺术指导、总监"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/teacherTitles"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/teachingExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:text="10年教龄"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/identityConfirmed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="身份认证"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/half_visibily"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fansNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="909"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="粉丝"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/studentNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6618"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="学生"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/praisePercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="98%"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="好评"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/imagelayout"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:id="@+id/brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textbrief"
                android:layout_width="50dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="简介"
                android:textColor="@color/dark_orange"
                android:textSize="14sp" />

            <View
                android:id="@+id/viewbrief"
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/dark_orange"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/subjects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textsubjects"
                android:layout_width="50dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="课程"
                android:textColor="@color/light_gray"
                android:textSize="14sp" />

            <View
                android:id="@+id/viewsubjects"
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/dark_orange"
                android:gravity="center"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/photoalbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textphotoalbum"
                android:layout_width="50dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="相册"
                android:textColor="@color/light_gray"
                android:textSize="14sp" />

            <View
                android:id="@+id/viewphotoalbum"
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/dark_orange"
                android:gravity="center"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/teachercomments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textteachercomments"
                android:layout_width="50dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="评价"
                android:textColor="@color/light_gray"
                android:textSize="14sp" />

            <View
                android:id="@+id/viewteachercomments"
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/dark_orange"
                android:gravity="center"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tablayout"
        android:background="@color/light_gray" />
</LinearLayout>
