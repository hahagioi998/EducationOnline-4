<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/basicframe_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <android.support.v7.widget.RecyclerView
        android:layout_above="@+id/bottomLayout"
        android:id="@+id/recyclerList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <View
        android:layout_above="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/light_gray"
        />
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:background="@color/whitesmoke"
                android:id="@+id/addfavoritelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView

                    android:id="@+id/addfavorite"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/favorite" />

                <TextView
                    android:id="@+id/textAddFavorite"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:text="收藏"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/whitesmoke"
                android:id="@+id/sharelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@mipmap/iconfontfenxiang" />

                <TextView
                    android:id="@+id/textShare"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:text="分享"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/whitesmoke"
                android:id="@+id/downloadlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/download"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/share"
                    android:padding="5dp"
                    android:src="@mipmap/iconfontxiazai" />

                <TextView
                    android:id="@+id/textDownload"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:text="下载"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/addorbuy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:background="@color/normal_red"
            android:gravity="center"
            android:text="加入课程"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>