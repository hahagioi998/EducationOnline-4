<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/teacherandorg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:text="*"
            android:textColor="@color/darkred"
            android:textSize="14sp"
            android:id="@+id/textView2" />

        <EditText
            android:layout_marginRight="20dp"
            android:maxLines="1"
            android:background="@null"
            android:id="@+id/teacher_orgnization"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:hint="老师/机构"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="5dp"
        android:background="@color/light_gray" />

    <EditText
        android:maxLines="1"
        android:layout_marginRight="20dp"
        android:background="@null"
        android:id="@+id/courseName"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:hint="课程名称"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/whitesmoke" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/light_gray" />

    <RelativeLayout
        android:id="@+id/complaintReasonDrop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="*"
            android:textColor="@color/darkred"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/complaintreason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/textview1"
            android:text="举报原因"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:src="@mipmap/arrow_down_br" />
        <View
            android:id="@+id/searchlayout"
            android:layout_alignParentRight="true"
            android:layout_width="1px"
            android:layout_height="1px"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="举报详情"
        android:textSize="14sp" />

    <EditText
        android:padding="20dp"
        android:gravity="top"
        android:id="@+id/complaintdetail"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_nocorner_black"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:id="@+id/addpictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/addpicture1"
            android:padding="18dp"
            android:background="@drawable/shape_nocorner_lightgray"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_redcross"
            />
        <ImageView
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:id="@+id/addpicture2"
            android:padding="8dp"
            android:background="@drawable/shape_nocorner_lightgray"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/icon_redcross"
            />
        <ImageView
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:id="@+id/addpicture3"
            android:padding="8dp"
            android:background="@drawable/shape_nocorner_lightgray"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/icon_redcross"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="请上传内容截图，最多三张"
        android:textColor="@color/what_gray"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:id="@+id/phoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:text="*"
            android:textColor="@color/darkred"
            android:textSize="14sp" />

        <TextView
            android:background="@null"
            android:id="@+id/setPhoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:textSize="14sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/whitesmoke"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/submitbtn"
            android:padding="5dp"
            android:text="提    交"
            android:textColor="@color/normal_red"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="30dp"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_smallcorner_redline"/>
    </RelativeLayout>
</LinearLayout>
