<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/basicframe_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@color/black"
        android:id="@+id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/background"/>


        <ImageView
            android:visibility="invisible"
            android:id="@+id/roundLeftBack"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="15dp"
            android:src="@mipmap/icon_round_back" />

        <com.upyun.upplayer.widget.UpVideoView
            android:id="@+id/upVideoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <ImageView
            android:id="@+id/videoMask"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/video_play"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:src="@mipmap/icon_video_play"
            android:visibility="gone" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/payTips"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center"
            android:text="本课程为收费课程，购买后可完后才能学习"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/payBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/payTips"
            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_nocorner_orange"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="立即购买"
            android:textColor="@color/dark_orange"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/videorelated"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="#7f000000"
            android:orientation="horizontal">

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/playBtn"
                android:padding="5dp"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/icon_play" />

            <SeekBar
                android:layout_centerVertical="true"
                android:thumb="@mipmap/icon_oval"
                android:id="@+id/seekbar"
                android:maxHeight="10dip"
                android:minHeight="10dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/expandBtn"
                android:layout_toRightOf="@+id/playBtn"
                android:max="100"
                android:progress="0" />

            <ImageView
                android:id="@+id/expandBtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/icon_expand_screen" />

            <TextView
                android:id="@+id/totalTime"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@+id/expandBtn"
                android:gravity="bottom|right"
                android:text="12:09"
                android:textColor="@color/white"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/currentTime"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/playBtn"
                android:text="00:00:00"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="35dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textdetails"
                android:layout_width="50dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="详情"
                android:textSize="14sp"
                android:textColor="@color/dark_orange" />

            <View
                android:id="@+id/viewdetails"
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/dark_orange"
                android:gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/directory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textdirectory"
                android:layout_width="50dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="目录"
                android:textSize="14sp"
                android:textColor="@color/light_gray" />

            <View
                android:id="@+id/viewdirectory"
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/dark_orange"
                android:gravity="center"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textcomments"
                android:layout_width="50dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="评价"
                android:textSize="14sp"
                android:textColor="@color/light_gray" />

            <View
                android:id="@+id/viewcomments"
                android:layout_width="60dp"
                android:layout_height="2dp"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@color/dark_orange"
                android:gravity="center"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/light_gray" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/courseRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/light_gray"
        android:layout_above="@+id/bottomLayout"
        />
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <LinearLayout
                android:background="@color/whitesmoke"
                android:id="@+id/addfavoritelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView

                    android:id="@+id/addfavorite"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/favorite" />

                <TextView
                    android:id="@+id/textAddFavorite"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:text="收藏"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/whitesmoke"
                android:id="@+id/sharelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@mipmap/iconfontfenxiang" />

                <TextView
                    android:id="@+id/textShare"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:text="分享"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:background="@color/whitesmoke"
                android:id="@+id/downloadlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/download"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/share"
                    android:padding="5dp"
                    android:src="@mipmap/iconfontxiazai" />

                <TextView
                    android:id="@+id/textDownload"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:text="下载"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/addorbuy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="4"
            android:background="@color/normal_red"
            android:gravity="center"
            android:text="加入课程"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>