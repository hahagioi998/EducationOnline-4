<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:text="非WIFI环境下载提醒"
            style="@style/txt_black_14" />
        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/warnCheckbox"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/hint1"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:text="视频下载"
            style="@style/txt_black_14" />
        <TextView
            android:layout_below="@+id/hint1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="存储卡/mDownLoads/"
            style="@style/txt_gray_14" />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/videoSize"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/videoDelBtn"
            android:text="0KB"
            style="@style/txt_gray_14" />
        <View
            android:layout_toLeftOf="@+id/videoDelBtn"
            android:background="@color/light_gray"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/videoDelBtn"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="点击清理"
            style="@style/txt_gray_14" />
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/hint2"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:text="图片缓存"
            style="@style/txt_black_14" />
        <TextView
            android:layout_below="@+id/hint2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="存储卡/EduOL/"
            style="@style/txt_gray_14" />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/imgSize"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/imgDelBtn"
            android:text="0KB"
            style="@style/txt_gray_14" />
        <View
            android:layout_toLeftOf="@+id/imgDelBtn"
            android:background="@color/light_gray"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:id="@+id/imgDelBtn"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="点击清理"
            style="@style/txt_gray_14" />
    </RelativeLayout>
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
</LinearLayout>
