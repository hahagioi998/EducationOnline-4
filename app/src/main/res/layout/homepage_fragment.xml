<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.education.online.view.refreshlayout.MaterialRefreshLayout
        android:id="@+id/id_swipe_ly"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    </com.education.online.view.refreshlayout.MaterialRefreshLayout>
    <RelativeLayout
        android:background="@color/trans_white"
        android:id="@+id/headerLayout"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:orientation="vertical" >
        <TextView
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:gravity="center"
            style="@style/txt_black_14"
            android:id="@+id/toolbarTxtRight"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/toolbarTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dip"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="70dip"
            android:textColor="@color/normal_gray"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_alignParentBottom="true"
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
    </RelativeLayout>

    <LinearLayout
        android:gravity="right|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="45dp">
    <com.education.online.view.circularbtn.MorphingButton
        android:id="@+id/toolbarIconRight"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:textSize="14sp"
        android:textColor="@color/normal_gray"
        android:layout_marginRight="10dip" />
    </LinearLayout>
</RelativeLayout>