<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:singleLine="true"
            android:gravity="center_vertical"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="订单号:"
            android:id="@+id/orderId"
            style="@style/txt_black_14" />
        <TextView
            android:singleLine="true"
            android:gravity="center_vertical"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text=""
            android:id="@+id/orderStatus"
            android:layout_alignParentRight="true"
            style="@style/txt_black_14" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="15dp"
                android:id="@+id/teacherImg"
                android:layout_centerVertical="true"
                android:layout_width="65dp"
                android:layout_height="65dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_alignTop="@+id/teacherImg"
                android:layout_toRightOf="@+id/teacherImg"
                android:text="名称"
                android:id="@+id/teacherName"
                android:textSize="14sp"
                style="@style/txt_black_14"/>
            <RelativeLayout
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/teacherName"
                android:layout_toRightOf="@+id/teacherImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/shape_normalredline_with_corner"
                    android:text="沟通"
                    android:paddingLeft="23dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:id="@+id/totalk"
                    android:textColor="@color/normal_red"
                    style="@style/txt_black_12"/>
                <View
                    android:layout_marginLeft="7dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_talk_small"
                    android:layout_width="13dp"
                    android:layout_height="11dp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/userIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_alignParentTop="true"
                android:text="课程名"
                android:textSize="14sp"
                android:id="@+id/courseName"
                style="@style/txt_black_14" />
            <TextView
                android:layout_below="@+id/courseName"
                android:layout_marginTop="8dp"
                android:lineSpacingExtra="2dp"
                android:text="视频课   5课时"
                android:id="@+id/courseNum"
                style="@style/txt_gray_12" />
            <TextView
                android:layout_below="@+id/courseNum"
                android:layout_marginTop="5dp"
                android:lineSpacingExtra="2dp"
                android:text="总价: 100"
                android:id="@+id/orderTime"
                style="@style/txt_gray_12" />
            <View
                android:id="@+id/dividerLine"
                android:layout_below="@+id/orderTime"
                android:layout_marginTop="15dp"
                android:background="@color/light_gray"
                android:layout_width="match_parent"
                android:layout_height="1px" />
            <TextView
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_below="@+id/dividerLine"
                android:text="总价: 100"
                android:id="@+id/totalPrice"
                style="@style/txt_gray_12" />
            <TextView
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/dividerLine"
                android:layout_alignBottom="@+id/payPrice"
                android:layout_toLeftOf="@+id/payPrice"
                android:text="实付: "
                style="@style/txt_gray_12" />
            <TextView
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_below="@+id/dividerLine"
                android:text="100.00"
                android:textSize="16sp"
                android:textColor="@color/normal_red"
                android:id="@+id/payPrice"
                style="@style/txt_gray_12" />
        </RelativeLayout>
    </LinearLayout>


    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <View
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
</LinearLayout>