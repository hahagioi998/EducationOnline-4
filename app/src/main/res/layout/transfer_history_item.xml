<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:text="订单号"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_marginRight="5dp"
        android:id="@+id/courseName"
        style="@style/txt_gray_14" />
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/courseName"
        android:text="账号类型"
        android:id="@+id/accountType"
        style="@style/txt_gray_14" />
    <TextView
        android:id="@+id/hintCash"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/accountType"
        android:text="提现金额: "
        style="@style/txt_gray_14" />
    <TextView
        android:layout_marginLeft="90dp"
        android:layout_alignBottom="@+id/hintCash"
        android:text="0"
        android:textColor="@color/normal_blue"
        android:id="@+id/balanceTxt"
        style="@style/txt_black_16" />
    <TextView
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:text="2016.9.7"
        android:layout_alignBottom="@+id/accountType"
        android:id="@+id/dateTxt"
        android:textColor="@color/light_gray"
        style="@style/txt_gray_14" />
    <TextView
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_alignBottom="@+id/hintCash"
        android:text="状态"
        android:id="@+id/costTxt"
        style="@style/txt_black_14" />

    <View
        android:layout_marginTop="12dp"
        android:layout_below="@+id/balanceTxt"
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:id="@+id/view4" />

    <TextView
        android:id="@+id/approver_info"
        style="@style/txt_gray_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>

