<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:lineSpacingExtra="3dp"
        android:background="@color/whitesmoke"
        android:text="只有通过身份认证，学生才能搜到你哦～\n1:您的证件信息将为您保密，加上水印“仅限身份认证”，不作为他用\n2:照片大小不超过5M"
        style="@style/txt_gray_12" />
    <LinearLayout
        android:layout_marginLeft="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="姓       名"
            style="@style/txt_black_14" />
        <EditText
            android:id="@+id/nameEdt"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:textSize="14sp"
            android:textColorHint="@color/light_gray"
            android:hint="请输入身份证姓名"
            android:gravity="center_vertical|right"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <View
        android:layout_marginLeft="35dp"
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:layout_marginLeft="35dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:text="身份证号"
            style="@style/txt_black_14" />
        <EditText
            android:id="@+id/idEdt"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:textSize="14sp"
            android:textColorHint="@color/light_gray"
            android:hint="请输入身份证号码"
            android:gravity="center_vertical|right"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/whitesmoke"
        android:text="第一步：上传手持身份证照片"
        style="@style/txt_gray_14" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <ImageView
            android:src="@mipmap/bg_tc_auth_exm1"
            android:layout_width="120dp"
            android:layout_height="90dp" />
        <ImageView
            android:id="@+id/imgAdd1"
            android:layout_marginLeft="40dp"
            android:src="@mipmap/icon_pic_add"
            android:layout_width="120dp"
            android:layout_height="90dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/whitesmoke"
        android:text="第二步：上传身份证正面照片"
        style="@style/txt_gray_14" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="110dp">
        <ImageView
            android:src="@mipmap/bg_tc_auth_exm2"
            android:layout_width="120dp"
            android:layout_height="90dp" />
        <ImageView
            android:id="@+id/imgAdd2"
            android:layout_marginLeft="40dp"
            android:src="@mipmap/icon_pic_add"
            android:layout_width="120dp"
            android:layout_height="90dp" />
    </LinearLayout>
</LinearLayout>
