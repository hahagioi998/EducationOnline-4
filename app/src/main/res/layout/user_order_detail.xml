<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/normal_red"
        android:layout_height="60dp">
        <ImageView
            android:layout_marginLeft="25dp"
            android:src="@mipmap/order_status1"
            android:id="@+id/statusIcon"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:text="已支付"
            android:textSize="18sp"
            style="@style/txt_white_16" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:text="实付金额: "
            style="@style/txt_white_12" />
        <TextView
            android:id="@+id/payMoney"
            android:layout_marginLeft="10dp"
            android:text="¥100"
            android:textSize="18sp"
            style="@style/txt_white_16" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="25dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/verylight_gray"
        android:layout_height="60dp">
        <TextView
            android:text="订单编号：000000000"
            android:id="@+id/orderId"
            style="@style/txt_black_14"/>
        <TextView
            android:text="下单时间：000000000"
            android:layout_marginTop="5dp"
            android:id="@+id/createTime"
            style="@style/txt_black_14"/>
        </LinearLayout>
    <LinearLayout
        android:paddingLeft="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/teacherImg"
                android:layout_centerVertical="true"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_alignTop="@+id/teacherImg"
                android:layout_toRightOf="@+id/teacherImg"
                android:text="名称"
                android:layout_marginLeft="10dp"
                android:id="@+id/teacherName"
                android:textSize="15sp"
                style="@style/txt_black_14"/>
            <RelativeLayout
                android:layout_marginTop="6dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/teacherName"
                android:layout_toRightOf="@+id/teacherImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:background="@drawable/shape_normalredline_with_corner"
                    android:text="沟通"
                    android:paddingLeft="23dp"
                    android:paddingRight="5dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:id="@+id/totalk"
                    android:textColor="@color/normal_red"
                    style="@style/txt_black_12"/>
                <View
                    android:layout_marginLeft="7dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_talk_small"
                    android:layout_width="13dp"
                    android:layout_height="11dp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/labelTxt"
                android:paddingRight="5dp"
                android:gravity="center_vertical|right"
                android:text="视频课"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:textColor="@color/normal_red"
                android:background="@mipmap/bg_label"
                android:layout_width="60dp"
                android:layout_height="20dp" />
            <View
                android:layout_alignParentBottom="true"
                android:background="@color/light_gray"
                android:layout_width="match_parent"
                android:layout_height="1px" />
        </RelativeLayout>

        <TextView
            android:paddingLeft="5dp"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:text="平面设计"
            android:id="@+id/courseTitle"
            style="@style/txt_black_14"/>
        <View
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <RelativeLayout
            android:paddingLeft="5dp"
            android:paddingRight="25dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/hint1"
                android:text="课节"
                style="@style/txt_gray_12" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/hint1"
                android:text="总价"
                style="@style/txt_gray_12" />
            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/courseNum"
                android:text="2课节"
                style="@style/txt_black_12" />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/courseNum"
                android:id="@+id/priceTxt"
                android:text="¥100"
                style="@style/txt_black_12" />
        </RelativeLayout>
        <View
            android:layout_marginTop="12dp"
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <LinearLayout
            android:paddingRight="25dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="实付金额： "
                style="@style/txt_black_12" />
            <TextView
                android:id="@+id/payTxt"
                android:text="¥100.00"
                android:textSize="18sp"
                style="@style/txt_black_14" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <View
        android:background="@color/verylight_gray"
        android:layout_width="match_parent"
        android:layout_height="10dp" />
    <View
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1px" />
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingLeft="5dp"
            android:layout_marginTop="12dp"
            android:textSize="14sp"
            android:text="课程信息"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_marginTop="12dp"
            android:background="@color/light_gray"
            android:layout_width="match_parent"
            android:layout_height="1px" />
        <HorizontalScrollView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/courseLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

            </LinearLayout>
        </HorizontalScrollView>
        </LinearLayout>
    <View
        android:background="@color/whitesmoke"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
