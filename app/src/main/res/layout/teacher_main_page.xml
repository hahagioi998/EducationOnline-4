<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        tools:ignore="RtlHardcoded"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <RelativeLayout
                    android:id="@+id/imagelayout"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp">

                    <ImageView
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.9"
                        android:id="@+id/background_image"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:background="@mipmap/teacher_bg" />
                    <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="100dp"
                        android:id="@+id/blankTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@+id/blankTxt"
                        android:id="@+id/teacherSexual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/shape_red_with_corner"
                        android:paddingBottom="1dp"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp"
                        android:paddingTop="1dp"
                        android:text="女"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/teacherName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/teacherSexual"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="Adobe 王晨曦"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/teacherTitles"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/teacherName"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="资深平面设计师、艺术指导、总监"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/teacherTitles"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/teachingExperience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:text="10年教龄"
                            android:textColor="@color/white"
                            android:textSize="11sp" />

                        <TextView
                            android:id="@+id/identityConfirmed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="身份认证"
                            android:textColor="@color/white"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/half_visibily"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fansNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="909"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="粉丝"
                                android:textColor="@color/white"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/studentNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6618"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="学生"
                                android:textColor="@color/white"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/praisePercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="98%"
                                android:textColor="@color/white"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:text="好评"
                                android:textColor="@color/white"
                                android:textSize="13sp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
                <android.support.v7.widget.Toolbar
                    app:layout_collapseMode="pin"
                    app:contentInsetStart="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <RelativeLayout
                        app:layout_scrollFlags="scroll|exitUntilCollapsed"
                        android:id="@+id/toolBarLayout"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_black_arrow_left"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/main.textview.title"
                            android:layout_marginLeft="75dp"
                            android:gravity="center_vertical"
                            android:text="11"
                            android:textSize="16sp"
                            style="@style/txt_gray_14"
                            />
                    </RelativeLayout>
                    </android.support.v7.widget.Toolbar>
            </android.support.design.widget.CollapsingToolbarLayout>
            <LinearLayout
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:background="@color/light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1px" />

            <LinearLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/imagelayout"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <LinearLayout
                    android:id="@+id/brief"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textbrief"
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="简介"
                        android:textColor="@color/dark_orange"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/viewbrief"
                        android:layout_width="60dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:background="@color/dark_orange"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/subjects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textsubjects"
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="课程"
                        android:textColor="@color/light_gray"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/viewsubjects"
                        android:layout_width="60dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:background="@color/dark_orange"
                        android:gravity="center"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/photoalbum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textphotoalbum"
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="相册"
                        android:textColor="@color/light_gray"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/viewphotoalbum"
                        android:layout_width="60dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:background="@color/dark_orange"
                        android:gravity="center"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/teachercomments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textteachercomments"
                        android:layout_width="50dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="评价"
                        android:textColor="@color/light_gray"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/viewteachercomments"
                        android:layout_width="60dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center_horizontal|bottom"
                        android:background="@color/dark_orange"
                        android:gravity="center"
                        android:visibility="gone" />

                </LinearLayout>
            </LinearLayout>

                <View
                    android:background="@color/light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="1px" />
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_above="@+id/bottomlayout"/>
        <android.support.v7.widget.Toolbar
            android:id="@+id/tool_bar"
            app:contentInsetLeft="0dp"
            app:layout_anchor="@id/blankTxt"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <!--<RelativeLayout
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:id="@+id/toolBarLayout"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_black_arrow_left"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/main.textview.title"
                    android:layout_marginLeft="75dp"
                    android:gravity="center_vertical"
                    android:text="11"
                    android:textSize="16sp"
                    style="@style/txt_gray_14"
                    />
            </RelativeLayout>-->
        </android.support.v7.widget.Toolbar>
        <ImageView
            android:id="@+id/teacherpotrait"
            android:transitionName="headIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            app:layout_behavior="com.education.online.view.AvatarImageBehavior"
            app:finalYPosition="5dp"
            app:finalHeight="@dimen/image_final_width"
            app:startToolbarPosition="2dp"
            app:startHeight="2dp"
            app:startXPosition="2dp"
            android:src="@mipmap/icon_head" />
    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:id="@+id/bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/whitesmoke">

        <LinearLayout
            android:id="@+id/addToFavoriteLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/starIcon"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@mipmap/icon_star" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="关注"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/consultingLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@mipmap/icon_comment" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:text="咨询"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:padding="4dp"
        android:layout_marginTop="4dp"
        android:src="@mipmap/icon_round_back" />
</RelativeLayout>
